\section{Regola di sostituzione uniforme}

\noindent Definizione: $A [\nicefrac{B}{P}]$ \quad \quad ($A$ con $B$ al posto di $P$)\newline

\noindent Questa formula è ottenuta rimpiazzando in $A$ ciascuna occorrenza di $P$ (atomo), con una occorrenza di $B$.\newline

\noindent \textbf{Definizione induttiva}

\begin{itemize} [\null]
    \item $q [\nicefrac{B}{P}] \:\equiv \:$
    $\begin{cases}
      q \: \:\:\:se \:\:\: q\not\equiv P\\
      B \: \:\:se \:\:\: q\equiv P
    \end{cases}$
    \item $\perp [\nicefrac{B}{P}] \equiv \: \perp$
    \item $(*A)\:[\nicefrac{B}{P}] \equiv * \: (A [\nicefrac{B}{P}])$ \: dove \: $* \in \{\neg , \Box , \lozenge \}$
    \item $(A \circ C) \: [\nicefrac{B}{P}] \equiv A [\nicefrac{B}{P}] \: \circ \: C [\nicefrac{B}{P}]$ \: dove \: $\circ \in \{\wedge, \vee , \to \}$
\end{itemize}

\vspace{0.8cm}

\noindent{\textbf{Regola di sostituzione uniforme (SU)}}\newline

\AxiomC{$\vDash A$}
\UnaryInfC{$\vDash A[\nicefrac{B}{P}]$}
\DisplayProof

\vspace{0.5cm}

\noindent (SU) non preserva la verità sul modello (è possibile $M \vDash A$ e $M \nvDash A[\nicefrac{B}{P}]$).\newline
(SU) preserva la \underline{validità} su una qualsiasi \underline{struttura}.\newline

\vspace{0.3cm}

\noindent \underline{Dimostrazione per contrapposizione}

\setlength{\LTleft}{20pt}
\begin{longtable}{ll}
    Assumo: & $F \nvDash A[\nicefrac{B}{P}]$\\
    Mostro: & $F \nvDash A$
\end{longtable}

\begin{quote}
    \noindent Per assunzione, esiste un modello $M = \:< W,R,I >$\newline
    \noindent e un punto $w$ di $M$ t.c. $\nvDash^{M}_w A [\nicefrac{B}{P}]$.\footnote{Questo perché basta un punto di un modello basato su $F$ che renda falsa la formula.}
\end{quote}

\begin{longtable}{ll}
    Definisco l'insieme: & $H_B = \{{\scriptstyle{V}} \in W \: : \:\: \vDash^{M}_{\scriptstyle{V}} B\}$\footnote{$H_B$ è l'insieme che contiene tutti i mondi in cui $B$ è vera.}\\
    Definisco il modello: & $M^{*} \: = \: < W,R,I^{*} >$\\\\
    & $I^{*}(q) \:$
    $\begin{cases}
      I(q) \: \:\:se \:\:\: q\not\equiv P \quad \quad (a) \\
      H_B \: \:\:se \:\:\:\: q\equiv P \quad \quad (b)
    \end{cases}$\\
\end{longtable}


\begin{quote}
    \noindent $(a)$ Se $P$ non occorre, il modello si comporta come quello di partenza su tutte le formule in cui non occorre $P$.\newline
    \noindent $(b)$ Se $P$ occorre, $P$ lo interpreto su quello che nel modello originale era l'interpretazione di $B$.\newline

    \noindent $\longrightarrow$ L'interpretazione nei due modelli sarà la medesima.\newline   
    Quindi, \textbf{Lemma}, per ogni formula ben formata (fbf) $D$ e per ogni $u\in V$:
    \begin{center}
        $\vDash^{M}_u D[\nicefrac{B}{P}]$ \: sse \: ${{\vDash_u^M}^*} D[\nicefrac{B}{P}]$
    \end{center}
    Ciò che si ha intenzione di mostrare è che il modello originale e quello modificato si comportano allo stesso modo sulla formula sostituita e su quella non sostituita.\newline
\end{quote}

\noindent\underline{Dimostrazione per induzione sulla costruzione di D}\newline 

\begin{longtable} {ll}
    Caso $D \equiv \perp$ & $\nvDash^{M}_u \perp [\nicefrac{B}{P}]$ \quad \quad ${{\nvDash_u^M}^*} \perp [\nicefrac{B}{P}]$\footnote{$\perp $ è sempre falso in ogni punto di ogni modello.}\\
\\
    Caso $D \equiv q$ &$\begin{cases}
      (a)\: q\not\equiv P\\
      (b)\: q\equiv P 
    \end{cases}$\\
    \\ %le soluzioni quelle belle
    &$ (a)\: q\not\equiv P$ \quad\quad\quad\quad $\vDash^{M}_u q[\nicefrac{B}{P}]$\\
    & \quad\quad\quad\quad\quad\quad\quad\quad\: $\vDash^{M}_u q$\\
    & \quad\quad\quad\quad\quad\quad\quad\quad\:$u \in I (q)$\\
    & \quad\quad\quad\quad\quad\quad\quad\quad\:$u \in I^{*} (q)$\footnote{Per costruzione di $I^{*}(q)$ so che $I^{*}(q) \: = \: I (q)$.}\\
    & \quad\quad\quad\quad\quad\quad\quad\quad\:${{\vDash_u^M}^*} q$\\
    \\
    & $(b)\: q\equiv P $ \quad\quad\quad\quad $\vDash^{M}_u q[\nicefrac{B}{P}]$\\
    & \quad\quad\quad\quad\quad\quad\quad\quad\:$\vDash^{M}_u B$\\
    & \quad\quad\quad\quad\quad\quad\quad\quad\:${{\vDash_u^M}^*} P$ \footnote{Questo perché per costruzione di $I(q)$ so che $I^{*}(q) = H_B$ e $H_B$ è l'insieme di tutti i mondi che rendono vera $B$.}\\
\\
Caso $D \equiv (\neg C)$\\
IH: & $\vDash^{M}_u C[\nicefrac{B}{P}] \quad sse \quad {{\vDash_u^M}^*} (C)$\\
\\
Assumo: &$\vDash^{M}_u (\neg C)\:[\nicefrac{B}{P}]$\\
& $\vDash^{M}_u \neg( C\:[\nicefrac{B}{P}])$\\
Per IH: & ${{\vDash_u^M}^*} \neg (C)$\\
\\
Caso $D \equiv (D \wedge E)$ & $\vDash^{M}_u (D \wedge E) \:[\nicefrac{B}{P}]$\\
& $\vDash^{M}_u D \:[\nicefrac{B}{P}]\:\: \wedge \:\:\vDash^{M}_u E \:[\nicefrac{B}{P}]$\footnote{Per definizione di sostituzione.}\\
& $\vDash^{M}_u D \:[\nicefrac{B}{P}]\:\: e \:\:\vDash^{M}_u E \:[\nicefrac{B}{P}]$\footnote{Per definizione di congiunzione devono essere vere entrambe.}\\
Per $IH_1$ e $IH_2$: & ${{\vDash_u^M}^*} D \:[\nicefrac{B}{P}]\:\: e \:\:{{\vDash_u^M}^*} E \:[\nicefrac{B}{P}]$\\
& ${{\vDash_u^M}^*} D \:[\nicefrac{B}{P}]\:\: \wedge \:\:{{\vDash_u^M}^*} E \:[\nicefrac{B}{P}]$\\
& ${{\vDash_u^M}^*} D \wedge E$\\
\\
Casi $\vee, \:\to$: analoghi.\\
\\
Caso: $ D \equiv \Box C$ &$\vDash^{M}_u (\Box C)\:[\nicefrac{B}{P}]$\\
& $\vDash^{M}_u \Box( C\:[\nicefrac{B}{P}])$\\
& $\forall t \in W \:(uRt \to \: \vDash^{M}_t C [\nicefrac{B}{P}])$\footnote{$t$ rappresenta un punto generico.}\\
Per IH: & $\forall t \in W \: (uRt \to \: {{\vDash_t^M}^*} C)$\\
& ${{\vDash_u^M}^*} \Box C$\\
\\
Caso $\lozenge$ analogo.
\end{longtable}
