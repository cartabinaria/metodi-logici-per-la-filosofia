\section{Costruzione linguaggio}
\large{!La costruzione del linguaggio è identica a quella della logica proposizionale, con l'aggiunta di {\color{purple}$\lozenge$} e {\color{purple}$\Box$}, che ho deciso di differenziare con {\color{purple}questo colore}!}\newline

\noindent\textbf{Elementi costitutivi:}
\begin{enumerate}
    \item[$\square$] Variabili enunciative ($\Phi$): P$_0$, P$_1$, P$_2$ ...
    \item[$\square$] Simboli: $\neg$, $\perp$, $\wedge$, $\vee$, $\rightarrow$, {\color{purple}$\lozenge$}, {\color{purple}$\Box$}\footnote{Questi due operatori sono chiamati \textit{operatori modali}.} 
    \item[$\square$] Simboli ausiliari: ( )
\end{enumerate}
\vspace{0.6cm}
\noindent\textbf{Definizione dell'insieme delle formule modali proposizionali (Fm$\Phi$)}

\begin{enumerate} [label=\protect\mycircled{\arabic*}]
    \item {Se $\mathpzc{P}_i$ $\in$ $\Phi$, allora $\mathpzc{P}_i$ $\in$ Fm$\Phi$}
    \item {$\perp$ $\in$ Fm$\Phi$}
    \vspace{0.7cm}
    \item {Se A $\in$ Fm$\Phi$, allora $\neg$A, {\color{purple}$\lozenge$}, {\color{purple}$\Box$} $\in$ Fm$\Phi$}
    \item {Se A,B $\in$ Fm$\Phi$, allora $\begin{Bmatrix}
        (A \wedge B) \\
        (A \vee B) \\
        (A \rightarrow B) \\
    \end{Bmatrix}$ $\in$ Fm$\Phi$}
    \vspace{0.7cm}
    \item Nient'altro appartiene a Fm$\Phi$.
\end{enumerate}
\vspace{0.6cm}
\noindent\textbf{Definizione di lunghezza di una formula A}
\begin{enumerate} [label=\protect\mycircled{\arabic*}]
    \item $lg(\mathpzc{P}_i) = 0$
    \item $lg(\perp) = 0$
    \vspace{0.4cm}
    \item $lg(\neg A) = {\color{purple}lg(\lozenge)}, {\color{purple}lg(\Box)} = lg(A) + 1$
    \item $lg(A \wedge B) = lg(A \vee B) = lg(A \rightarrow B) = lg(A) + lg(B) + 1$
\end{enumerate}
\begin{spacing} {1.5}

\vspace{1cm}

\noindent{\Large{\textbf{Principio di induzione matematica}}}
\vspace{0.5cm}
    
\noindent Una volta collegata la formula a numeri naturali, è possibile applicare il principio di induzione matematica direttamente alle formule.\newline
\renewcommand\arraystretch{1.5}
\vspace{0.3cm}

\noindent Base: P$(\perp)$, P$(P_i)$
\vspace{0.5cm}

\noindent Passo induttivo:
\begin{enumerate}[\null]
    \item $\:\:$Assumo: P$(A)$, P$(B)$
    \item\begin{tabular}{ll}
        \noindent Mostro: \quad & P$(\neg A)$ \\
         & {\tiny$\begin{pmatrix}
        P( A \wedge B) \\
        P(A \vee B) \\ 
        P(A \rightarrow B) \\
    \end{pmatrix}$} \\
    & $P({\color{purple}\lozenge})$, $P({\color{purple}\Box})$
    \end{tabular}
\end{enumerate}
\vspace{0.5cm}
\noindent Conclusione: \quad $\forall A \in Fm\Phi \: (P(A))$\footnote{Per ogni formula A appartenente all'insieme delle formule, vale la proprietà P.}
\end{spacing}

\section{Semantica}
\begin{spacing}{1.5}
\vspace{0.2cm}
\noindent \begin{longtable}{ll}
     \underline{Struttura relazionale} (frame) & $\textit{F} = < W, R>$ \\
     \underline{Modello}: & $M = < W, R, I>$ \\

     \\
     In cui: & $W$ è un insieme non vuoto di mondi.\\
     & $R$ è un insieme di coppie di mondi ($R \subseteq W x W$).\\
     & $I : \Phi \rightarrow \mathit{P}$\footnote{La $\mathit{P}$ (in realtà sarebbe dovuta essere una P in corsivo) esclusivamente in questo è l'operatore di potenza che ad ogni insieme associa l'insieme dei suoi sottoinsiemi.}$(W)$\footnote{La funzione prende in pasto le variabili enunciative e, per ciascuna di esse, restituisce un insieme di mondi. \`E equivalente a $I(P_i) \subseteq W$.}
     \end{longtable}
\end{spacing}

\vspace{0.6cm}
\begin{itemize}
    \item Si utilizzeranno u,w,v... come metavariabili che rappresentano mondi.
    \item $wRv$ significa che $v$ è accessibile da $w$ ($w$ vede $v$).
    \item $M$ è basato su $\textit{F}$, se \quad $M = < W, R, I>$ e $\textit{F} = < W, R>$
\end{itemize}
\vspace{1cm}
\noindent{\large{\textbf{Definizione di verità (${\vDash^{M}_w}$)\footnote{Restituisce la verità di A in un punto $w$ del modello $M$. Quindi, se il mondo $w$ non fa parte dell'interpretazione della variabile enunciativa $P$, allora $P$ è falsa in quel mondo.}}}}\newline
\begin{spacing} {1.5}

\noindent 
\begin{tabular}{lll}
    $\vDash^{M}_w (P_i)$ & sse \quad \quad \quad & $w \in I(P_i)$ \\
    $\nvDash^{M}_w (\perp)$ \\
    $\vDash^{M}_w (\neg B)$ & sse & $\nvDash^{M}_w (B)$\\
    $\vDash^{M}_w (B \wedge C )$ & sse & $\vDash^{M}_w (B)$\: e \:$\vDash^{M}_w (B)$\\    $\vDash^{M}_w (B \vee C )$ & sse & $\vDash^{M}_w (B)$\: o \:$\vDash^{M}_w (B)$\\
    $\vDash^{M}_w (B \rightarrow C )$ \quad \quad \:& sse & $\nvDash^{M}_w (B)$\: o \:$\vDash^{M}_w (B)$\\
    $\vDash^{M}_w {\color{purple}\Box} B$ & sse & $\forall v \in W \: (wRv \: \: implica \: \: \vDash^{M}_w B)$\footnotemark{}\\
    $\vDash^{M}_w {\color{purple}\lozenge} B$ & sse & $\exists v \in W \: (wRv \: \: e \: \: \vDash^{M}_w B)$\\ \\ \cdashline{1-3}
    $\nvDash^{M}_w \Box B$ & sse & $\exists v \in W \: (wRv \: \: e \: \: \nvDash^{M}_v B)$\\
    $\nvDash^{M}_w \lozenge B$ & sse & $\forall v \in W \: (wRv \: \: implica \: \: \nvDash^{M}_v B)$\\ \cdashline{1-3}
\end{tabular}
\footnotetext{Per ogni oggetto del dominio è vero $B$, a condizione che sia dentro $W$.}

